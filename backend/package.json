{
  "name": "healthcare-management-backend",
  "version": "1.0.0",
  "description": "Patient records management system backend",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "rimraf build && NODE_ENV=production tsc",
    "build:ui": "NODE_ENV=production rm -rf dist && cd ../frontend/ && npm install --include=dev && npm run build && cp -r dist ../backend",
    "build:ui:prod": "NODE_ENV=production rm -rf dist && cd ../frontend/ && npm install --include=dev && npm run build && cp -r dist ../backend/build",
    "start:prod": "NODE_ENV=production node build/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "db:create": "ts-node scripts/db-create.ts",
    "db:drop": "ts-node scripts/db-drop.ts",
    "db:seed": "ts-node scripts/db-seed.ts",
    "db:create-guests": "ts-node scripts/db-create-guest-users.ts",
    "db:all": "ts-node scripts/db-create.ts && ts-node scripts/db-seed.ts && ts-node scripts/db-create-guest-users.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "typecheck": "tsc --noEmit",
    "migration:generate": "ts-node node_modules/typeorm/cli migration:generate",
    "migration:run": "ts-node node_modules/typeorm/cli migration:run",
    "clean": "rimraf dist/* && rimraf build/*"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "generate-password": "^1.7.1",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.10",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "supertest": "^7.1.1",
    "testcontainers": "^10.4.0",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.73",
    "zod-validation-error": "^4.0.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.4",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/zxcvbn": "^4.4.5",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typeorm-extension": "^3.7.1",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/build/"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "coverage"
  }
}
